<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_arriving"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.client.gp.sharksclientapplication.ArrivingActivity">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/linearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Arriving"
            android:padding="7dp"
            android:id="@+id/addrtxt"
            android:layout_gravity="center_horizontal"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#7dffffff"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearlayout1"
        android:paddingLeft="7dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="7dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonoval2"
            android:src="@drawable/usericn"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout4"
            android:layout_below="@+id/linearLayout3"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Driver Vehicle Details"
                android:paddingLeft="7dp"
                android:layout_gravity="left"
                android:textSize="12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                android:text="Driver Name"
                android:id="@+id/dnametxt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkgray"
                android:paddingLeft="7dp"
                android:paddingBottom="5dp"
                android:text="Vehicle Model"
                android:id="@+id/vmodeltxt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkgray"
                android:paddingLeft="7dp"
                android:text="Plate Number"
                android:id="@+id/vnumtxt" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
