<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.client.gp.sharksclientapplication.HomeActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayout">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:weightSum="2">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/historybtn"
                android:src="@drawable/historyicns"
                android:background="@color/colorPrimary" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/settingsbtn"
                android:src="@drawable/settingsicns"
                android:background="@color/colorPrimaryDark" />
        </LinearLayout>

    </RelativeLayout>

    <at.markushi.ui.CircleButton
        android:layout_width="130dip"
        android:layout_height="130dip"
        android:src="@drawable/smallblueshark"
        app:cb_color="@color/colorAccent"
        app:cb_pressedRingWidth="10dip"
        android:id="@+id/gobtn"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-60dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heba Mohamed"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:textSize="20sp"
        android:id="@+id/usernametxt"
        android:paddingBottom="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceSmall"
        android:paddingTop="5dp"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:text="Passenger Name"
        android:layout_above="@+id/usernametxt"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/car"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:src="@drawable/prologo3"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true" />


</RelativeLayout>