<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_last_trip_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.client.gp.sharksclientapplication.LastTripDetailsActivity">


    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/mapimg"
        android:scaleType="fitCenter"
        android:src="@drawable/staticmap"
        android:layout_height="250dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="7dp"
            android:background="@drawable/buttonoval2"
            android:src="@drawable/usericn"/>
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="Passenger Name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="..."
                android:id="@+id/passengername"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="top"
            android:src="@drawable/route2"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="Pickup location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pickuploctxt"
                android:textColor="@color/colorPrimaryDark"
                android:text="..."
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:id="@+id/starttxt"
                android:gravity="right"
                android:text="10Km"
                tools:text="00:00AM 00/00/000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="Drop Off location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dropoffloctxt"
                android:textColor="@color/colorPrimaryDark"
                android:text="..."
                android:textSize="14sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:id="@+id/endtxt"
                android:gravity="right"
                android:text="10Km"
                tools:text="00:00AM 00/00/000" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/lightgray"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_gravity="center_vertical"
            android:background="@color/lightgray"
            android:orientation="vertical"
            android:weightSum="2"
            android:padding="3dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Distance"
                android:gravity="bottom|center"
                android:layout_weight="1"
                android:id="@+id/distancettxt"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="..Km"
                android:gravity="right"
                android:layout_weight="1"
                android:id="@+id/distancetxt"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:weightSum="2"
            android:background="@color/lightgray2"
            android:layout_weight="0.25"
            android:padding="3dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Duration"
                android:gravity="bottom"
                android:layout_weight="1"
                android:id="@+id/durtationtxt"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="..Hour"
                android:gravity="right"
                android:layout_weight="1"
                android:id="@+id/durationtxt"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/lightgray"
            android:orientation="vertical"
            android:layout_weight="0.25"
            android:weightSum="2"
            android:padding="3dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cost"
                android:gravity="bottom"
                android:layout_weight="1"
                android:id="@+id/duratitontxt"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="..$"
                android:gravity="right"
                android:layout_weight="1"
                android:id="@+id/costtxt"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/lightgray2"
            android:orientation="vertical"
            android:layout_weight="0.25"
            android:weightSum="2"
            android:padding="3dp"
            android:gravity="center"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Trip Rate"
                android:gravity="bottom|center_horizontal"
                android:layout_weight="1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="★★★★★"
                android:layout_weight="1"
                android:id="@+id/tripratetxt"
                android:gravity="center_horizontal"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
